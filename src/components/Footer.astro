---
import GitHubIcon from "@/assets/icons/github.svg";
import AstroIcon from "@/assets/icons/astro.svg";

const currentYear = new Date().getFullYear();
---

<footer class="py-12 px-4 mt-20 border-t border-gray-200">
	<div class="max-w-6xl mx-auto">
		<div class="flex flex-col md:flex-row justify-between items-center">
			<div class="mb-4 md:mb-0">
				<p class="text-gray-600">Â© {currentYear} Sakura Arumi. All rights reserved.</p>
			</div>
			<div class="flex gap-6">
				<a
					href="https://astro.build"
					target="_blank"
					rel="noopener noreferrer"
					class="text-gray-500 hover:text-gray-800 transition-colors"
					title="Built with Astro"
					aria-label="Built with Astro"
				>
					<AstroIcon size={24} class="fill-current" />
